@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    h1 {
        text-align: center;
        color: #007bff;
        margin-bottom: 30px;
    }

    .product-card {
        margin-bottom: 30px;
    }

    .product-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .product-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    .product-details {
        font-size: 1.1rem;
        margin-top: 10px;
        color: #555;
    }
</style>



<div class="text-center">
